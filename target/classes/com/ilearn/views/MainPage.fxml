<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #46B1E1;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ilearn.AppController">

    <!-- Top navigation bar with logo -->
    <HBox alignment="CENTER_LEFT" layoutX="10" layoutY="10" spacing="10">
        <ImageView fx:id="mainImageView" fitHeight="80" fitWidth="80" preserveRatio="true" />
    </HBox>

    <!-- Navigation buttons -->
    <Button layoutX="226.0" layoutY="75.0" onAction="#switchToClassroom"
            style="-fx-background-color: #46B1E1; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
            text="Classroom" />
    <Button layoutX="356.0" layoutY="75.0" onAction="#switchToCalendar"
            style="-fx-background-color: #46B1E1; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
            text="Calendar" />
    <Button layoutX="463.0" layoutY="78.0" onAction="#switchToMessages"
            style="-fx-background-color: #46B1E1; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
            text="Messages" />
    <Button layoutX="556.0" layoutY="74.0" onAction="#switchToGradebook"
            style="-fx-background-color: #46B1E1; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
            text="Gradebook" />

    <!-- Sidebar -->
    <VBox layoutX="10" layoutY="110" spacing="10">
        <!-- Glance at Classes button -->
        <Button onAction="#loadUserClasses" prefWidth="140"
                style="-fx-background-color: #F0F7FA; -fx-text-fill: #090c7c; -fx-font-weight: bold;"
                text="Glance at Classes" />
    </VBox>

    <!-- Middle box to display classes -->
    <VBox fx:id="classBox" layoutX="200" layoutY="150" spacing="10" prefWidth="400" prefHeight="400"
          style="-fx-background-color: #F0F7FA; -fx-border-color: #0288D1; -fx-border-width: 2; -fx-padding: 10;">
        <!-- List of classes, hidden initially -->
        <ListView fx:id="mainPageListView" prefWidth="380" prefHeight="350" visible="false" />
    </VBox>

</AnchorPane>
