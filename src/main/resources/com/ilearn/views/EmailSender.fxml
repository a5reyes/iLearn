<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            minHeight="600.0" minWidth="650.0" prefHeight="600.0" prefWidth="650.0"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ilearn.AppController">

    <children>

        <!-- Title -->
        <Label layoutX="260.0" layoutY="16.0" text="Messages">
            <font><Font size="30.0"/></font>
        </Label>

        <!-- Back button -->
        <Button layoutX="19.0" layoutY="14.0" text="Back"
                onAction="#backToMain"/>

        <!-- Message input -->
        <TextArea fx:id="messageBody" layoutX="148.0" layoutY="100.0"
                  prefHeight="200.0" prefWidth="200.0" promptText="Enter message"/>

        <!-- Recipient input -->
        <TextField fx:id="recipientField" layoutX="415.0" layoutY="100.0"
                   prefHeight="30.0" prefWidth="200.0" promptText="Enter recipient email"/>

        <Text layoutX="50.0" layoutY="320.0" text="Send a message"/>
        <Text layoutX="415.0" layoutY="85.0" text="To"/>

        <!-- Send Button -->
        <Button layoutX="563.0" layoutY="320.0" text="Send"
                onAction="#sendMessage"/>

        <!-- New Message Button -->
        <Button layoutX="49.0" layoutY="343.0" text="New Message"
         onAction="#newMessage"/>

    </children>
</AnchorPane>
